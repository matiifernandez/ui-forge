<%= simple_form_for [chat, message],
    html: {
        data: {
            controller: "form-submit",
            turbo_stream: true
        }
    } do |f| %>
  <%= f.input :content, label: "What kind of component", required: true,
   placeholder: "Describe the component you want to create", input_html: {
    data: {
        action: "keydown->form-submit#submitOnEnter"
    } }%>
  <div class="d-flex justify-content-between align-items-center">
    <%= f.button :submit, 'Forge Component', class: 'btn btn-primary' %>
    <%= link_to "Return to Components", project_components_path(@project), class: "btn btn-primary" %>
  </div>
<% end %>
